@model IEnumerable<Recode_MVC.Models.Cliente>

@{
    ViewData["Title"] = "Destinos";
}

<h1>Destinos</h1>

@foreach (var item in Model)
{
    <div class="card mb-2" style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">
                @Html.DisplayFor(modelItem => item.nome)
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.destino)</h6>
            <p class="card-text">@Html.DisplayFor(modelItem => item.email)</p>
            <p class="card-text">@Html.DisplayFor(modelItem => item.telefone)</p>
            <p class="card-text">@Html.DisplayFor(modelItem => item.cpf)</p>
            <a class="card-link" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
            <a class="card-link" asp-action="Details" asp-route-id="@item.id">Details</a> |
            <a class="card-link" asp-action="Delete" asp-route-id="@item.id">Delete</a>
        </div>
    </div>
}
